{# src/OC/PlatformBundle/Resources/view/Advert/view.html.twig #}

{% extends "ProjetUploadBundle::layout.html.twig" %}

{% block title %}
  Lecture d'une annonce - {{ parent() }}
{% endblock %}

{% block projetupload_body %}

  <h2>{{ tablature.title }}</h2>
  <i>Par {{ tablature.author }}, le {{ tablature.date|date('d/m/Y') }}</i>

  <div class="well">
    {{ tablature.content }}
  </div>

  <p>
    <a href="{{ path('projet_upload_home') }}" class="btn btn-default">
      <i class="glyphicon glyphicon-chevron-left"></i>
      Retour Ã  la liste
    </a>
    <a href="{{ path('projet_upload_edit', {'id': tablature.id}) }}" class="btn btn-default">
      <i class="glyphicon glyphicon-edit"></i>
      Modifier l'annonce
    </a>
    <a href="{{ path('projet_upload_delete', {'id': tablature.id}) }}" class="btn btn-danger">
      <i class="glyphicon glyphicon-trash"></i>
      Supprimer l'annonce
    </a>
  </p>

{% endblock %}