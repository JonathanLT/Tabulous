
{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
<form action="{{ path("fos_user_security_check") }}" method="post">
    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
<div class="form_row">
    <label for="username">{{ 'security.login.username'|trans }}</label>
    <input class="inputfield" type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
</div>
<div class="form_row">
    <label for="password">{{ 'security.login.password'|trans }}</label>
    <input class="inputfield" type="password" id="password" name="_password" required="required" />
</div>
<div class="form_row">
    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
    <label class="inputfield" for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
</div>
    <input class="button" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
</form>

{% endblock fos_user_content %}

